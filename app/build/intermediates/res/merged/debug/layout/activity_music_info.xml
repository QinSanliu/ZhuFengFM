<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context="zhufengfm.jmxgrobby.com.zhufengfm.MusicInfoActivity">
           <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   >
              <FrameLayout
                      android:layout_width="match_parent"
                      android:layout_height="500dp"
                      android:background="@color/bg_music"
                      android:alpha="100"
                      >
                  <ImageView
                          android:id="@+id/activity_music_info_bg"
                          android:layout_width="match_parent"
                          android:layout_height="500dp"
                          />
                  <LinearLayout
                          android:orientation="vertical"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          >
                      <LinearLayout
                              android:orientation="horizontal"
                              android:layout_width="match_parent"
                              android:layout_height="60dp"
                              >
                          <ImageView
                                  android:id="@+id/activity_music_info_back"
                                  android:layout_gravity="center"
                                  android:layout_width="40dp"
                                  android:layout_height="40dp"
                                  android:layout_marginLeft="10dp"
                                  android:background="@mipmap/arrow_down"
                                  />
                          <TextView
                                  android:id="@+id/activity_music_info_music_title"
                                  android:gravity="center"
                                  android:textColor="#fff"
                                  android:text="两个人的故事"
                                  android:layout_weight="1"
                                  android:layout_width="0dp"
                                  android:layout_height="match_parent"
                                  android:singleLine="true"
                                  android:ellipsize="marquee"
                                  android:focusable="true"
                                  android:marqueeRepeatLimit="marquee_forever"
                                android:focusableInTouchMode="true"
                                  />
                          <TextView
                                  android:id="@+id/activity_music_info_music_number"
                                  android:gravity="center"
                                  android:textColor="#fff"
                                  android:text="1.3万"
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent"
                                  />

                          <ImageView
                                  android:id="@+id/activity_music_info_alarm"
                                  android:layout_gravity="center"
                                  android:src="@mipmap/alarm_clock_normal"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  />
                      </LinearLayout>

                      <ImageView

                              android:id="@+id/activity_music_info_center_img"
                              android:padding="60dp"
                              android:layout_gravity="center"
                              android:src="@mipmap/bg_welcome"
                              android:layout_width="300dp"
                              android:layout_height="300dp"
                              />
                      <LinearLayout
                              android:layout_gravity="bottom"
                              android:layout_width="match_parent"
                              android:layout_height="140dp"
                              android:paddingBottom="40dp"
                              android:paddingTop="40dp"
                              >
                          <Button
                                  android:id="@+id/activity_music_info_music_list"
                                  android:textSize="10sp"
                                  android:layout_gravity="center"
                                  android:background="#0fff"
                                  android:layout_width="0dp"
                                  android:layout_weight="1"
                                  android:layout_height="match_parent"
                                  android:textColor="#fff"
                                  android:text="播放列表"
                                  android:drawableTop="@mipmap/ic_show_panel"
                                  />
                          <Button
                                  android:id="@+id/activity_music_info_music_before"
                                  android:background="@mipmap/pre_icon_transparent_normal"
                                  android:layout_width="0dp"
                                  android:layout_weight="1"
                                  android:layout_height="wrap_content"
                                  />
                          <Button
                                  android:id="@+id/activity_music_info_music_pause"
                                  android:background="@mipmap/pause_icon_transparent_normal"
                                  android:layout_width="0dp"
                                  android:layout_weight="1"
                                  android:layout_height="wrap_content"
                                  />
                          <Button
                                  android:id="@+id/activity_music_info_music_next"
                                  android:background="@mipmap/next_icon_transparent_normal"
                                  android:layout_width="0dp"
                                  android:layout_weight="1"
                                  android:layout_height="wrap_content"
                                  />
                          <Button
                                  android:id="@+id/activity_music_info_music_history"
                                  android:textSize="10sp"
                                  android:layout_gravity="center"
                                  android:background="#0fff"
                                  android:layout_width="0dp"
                                  android:layout_weight="1"
                                  android:layout_height="match_parent"
                                  android:textColor="#fff"
                                  android:text="播放历史"
                                  android:drawableTop="@mipmap/play_history_normal"
                                  />
                      </LinearLayout>
                  </LinearLayout>


              </FrameLayout>
               <SeekBar
                       android:id="@+id/activity_music_info_music_progress"
                       android:layout_width="match_parent"
                       android:layout_height="20dp"
                       />
               <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       >
                   <ImageView
                           android:id="@+id/activity_music_info_small_icon"
                           android:layout_width="80dp"
                           android:layout_height="80dp"
                           android:padding="10dp"
                           android:src="@mipmap/ic_launcher"
                           />
                   <TextView

                           android:id="@+id/activity_music_info_title"
                           android:layout_marginTop="5dp"
                           android:text="927交通广播小南"
                           android:layout_toRightOf="@id/activity_music_info_small_icon"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           />
                   <TextView

                           android:id="@+id/activity_music_info_song"
                           android:layout_marginTop="5dp"
                           android:text="声音"
                           android:layout_toRightOf="@id/activity_music_info_small_icon"
                           android:layout_below="@id/activity_music_info_title"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           />
                   <TextView
                           android:id="@+id/activity_music_info_songnum"
                           android:layout_marginLeft="5dp"
                           android:layout_marginTop="5dp"
                           android:text="239"
                           android:layout_below="@id/activity_music_info_title"
                           android:layout_toRightOf="@id/activity_music_info_song"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           />
                   <TextView
                           android:id="@+id/activity_music_info_liker"
                           android:layout_marginLeft="5dp"
                           android:layout_below="@id/activity_music_info_title"
                           android:layout_toRightOf="@id/activity_music_info_songnum"
                           android:layout_marginTop="5dp"
                           android:text="粉丝"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           />
                   <TextView
                           android:id="@+id/activity_music_info_likernumber"
                           android:layout_marginLeft="5dp"
                           android:layout_below="@id/activity_music_info_title"
                           android:layout_toRightOf="@id/activity_music_info_liker"
                           android:layout_marginTop="5dp"
                           android:text="11.4万"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           />
                   <TextView
                           android:id="@+id/activity_music_info_music_info"
                           android:layout_marginTop="5dp"
                           android:layout_below="@id/activity_music_info_song"
                           android:text="radio 随车听 随车听老歌"
                           android:layout_toRightOf="@id/activity_music_info_small_icon"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           />
                   <ImageView
                           android:layout_margin="10dp"
                           android:src="@mipmap/focus_btn_normal"
                           android:id="@+id/activity_music_info_attention"
                           android:layout_alignParentRight="true"
                           android:layout_width="60dp"
                           android:layout_height="60dp"
                           />
               </RelativeLayout>
                   <!-- android 5.0 新的UI内容，使用design 包来兼容-->
                   <android.support.design.widget.TabLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:id="@+id/activity_music_tab"
                           app:tabIndicatorColor= "#ffff9882"
                           app:tabIndicatorHeight="3dp"
                           app:tabSelectedTextColor="#ffff9882"
                           />
                   <android.support.v4.view.ViewPager
                           android:id="@+id/activity_music_view_pager"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           />
           </LinearLayout>

</ScrollView>
